<div id="paginator">
  <%= paginate @users, :remote => true %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sortable "email" %></th>
      <th>Images</th>
      <th>Total Size</th>
    </tr>
  </thead>

  <tbody id="users">
    <%= render @users %>
  </tbody>
</table>

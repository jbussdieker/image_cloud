<h1><%= pluralize current_user.images.count, "Image" %></h1>

<%= link_to 'New Image', new_image_path, :class => 'btn btn-primary' %>

<%= link_to 'Map', map_images_path, :class => 'btn btn-primary' %>
<%= link_to 'Tile', tile_images_path, :class => 'btn btn-primary' %>

<div id="paginator">
  <%= paginate @images, :remote => true %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th><%= sortable "name" %></th>
      <th class="hidden-xs"><%= sortable "taken_at" %></th>
      <th></th>
    </tr>
  </thead>

  <tbody id="images">
    <%= render @images %>
  </tbody>
</table>

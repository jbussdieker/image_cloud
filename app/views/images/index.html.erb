<h1>Images</h1>

<%= link_to 'New Image', new_image_path, :class => 'btn btn-primary' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Taken at</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.time_limited_url(:mini) %></td>
        <td><%= image.name %></td>
        <td><%= image.taken_at %></td>
        <td><%= image.longitude %></td>
        <td><%= image.latitude %></td>
        <td>
          <%= link_to 'Show', image, class: 'btn btn-xs btn-default' %>
          <%= link_to 'Edit', edit_image_path(image), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

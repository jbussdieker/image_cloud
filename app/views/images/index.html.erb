<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Taken at</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.image.url(:mini) %></td>
        <td><%= image.name %></td>
        <td><%= image.taken_at %></td>
        <td><%= image.longitude %></td>
        <td><%= image.latitude %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

